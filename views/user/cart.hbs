<div class="carrito">

    <h2 class="h2-cart">Cart</h2>

   <div class="profile"> 

    <ul>
        {{#each this.userCart.cart}}
        <li>
        <p>Product: {{this.item.name}}</p>
        <p>Quantity: {{this.quantity}}</p>
        <p>Price: {{this.item.price}} €</p>
    

        </li>
        {{/each}}
    </ul>



    <p>Total Price: {{calculateTotalPrice this.userCart.cart}} €</p>

        <div>

        <form action="/user/remove-cart" method="post">
        <input type="hidden" name="userId" value="{{this.userCart._id}}" />
            <button  class="btn-remove" type="submit">Remove cart</button>
        </form>

        </div>

    <button class="btn-pay">
     <a class="paylink" href="/user/{{this.userCart._id}}/pay">Pay</a>
    </button>

   </div>
    
    
