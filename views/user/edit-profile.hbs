<div>
    
  <h2>Edit profile</h2>

  <form action="/user/edit-profile" method="post">

    <label for="firstName">First name</label>git
    <input type="text" name="firstName" value="{{ user.firstName }}">

    <br>
    <label for="lastName">Last name</label>
    <input type="text" name="lastName" value="{{ user.lastName }}">

    <br>

    <label for="email">Email</label>
    <input type="email" name="email" value="{{ user.email }}">

    <br>

    <label for="address">Address</label>
    <input type="text" name="address" value="{{ user.address }}">

    <br>

    <label for="city">City</label>
    <input type="text" name="city" value="{{ user.city }}">

    <br>

    <label for="postalCode">Postal code</label>
    <input type="text" name="postalCode" value="{{ user.postalCode }}">

    <br>

    <label for="dateOfBirth">Birthdate:</label>
    <input type="date" name="dateOfBirth" value="{{ user.dateOfBirth }}">


    <br>

    <button>Update</button>

  </form>

</div>
